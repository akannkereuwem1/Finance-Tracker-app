<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.financeapp.ExpensesController"
            stylesheets="@styles.css">

    <!-- Sidebar on the LEFT (reuse same style) -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #2C3E50; -fx-padding: 20;" prefWidth="180">
            <Label text="Finance App" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Button text="Dashboard" maxWidth="Infinity" onAction="#onDashboardClick"/>
            <Button text="Expenses" maxWidth="Infinity" styleClass="active-btn"/>
            <Button text="Income" maxWidth="Infinity" onAction="#onIncomeClick"/>
            <Button text="Logout" maxWidth="Infinity" onAction="#onLogoutClick"/>
        </VBox>
    </left>

    <!-- Expenses content in CENTER -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" styleClass="card" style="-fx-padding: 20;">
            <Label text="Expenses" styleClass="label-title"/>

            <TableView fx:id="expensesTable" prefHeight="400" prefWidth="600">
                <columns>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150"/>
                    <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
                    <TableColumn fx:id="notesColumn" text="Notes" prefWidth="250"/>
                </columns>
            </TableView>

            <Button text="âž• Add Expense" onAction="#onAddExpenseClick"/>
        </VBox>
    </center>
</BorderPane>
